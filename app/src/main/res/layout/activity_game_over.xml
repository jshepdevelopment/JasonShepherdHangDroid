<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameOverLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    tools:context="edu.slcc.jasonshepherd.jasonshepherdhangdroid.GameOverActivity"
    android:background="@drawable/game_over">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:id="@+id/highScoreLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highScoreView"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="High Score"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gamePointsView"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:id="@+id/layoutLetters">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameWordView"
            android:layout_marginRight="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:text="Jello"
            android:textColor="@color/red"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/gameOverButtons">
            <Button
                android:id="@+id/playAgain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:onClick="playAgain"
                android:text="Play Again"/>
    </LinearLayout>

</RelativeLayout>

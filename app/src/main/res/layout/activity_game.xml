                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="N"/>
            <Button
                android:id="@+id/O"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="O"/>
            <Button
                android:id="@+id/P"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="P"/>
            <Button
                android:id="@+id/Q"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="Q"/>
            <Button
                android:id="@+id/R"
                android:layout_width="50dp"

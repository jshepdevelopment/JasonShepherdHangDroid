<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="edu.slcc.jasonshepherd.jasonshepherdhangdroid.GameActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hangDroidView"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/hangdroid_0"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:id="@+id/layoutLetters">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameWordView"
            android:layout_marginRight="5dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/gradient_background"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/letterSelection"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="15dp">

            <Button
                android:id="@+id/A"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="A"/>
            <Button
                android:id="@+id/B"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="B"/>
            <Button
                android:id="@+id/C"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="C"/>
            <Button
                android:id="@+id/D"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="D"/>
            <Button
                android:id="@+id/E"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="E"/>
            <Button
                android:id="@+id/F"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="F"/>
            <Button
                android:id="@+id/G"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="G"/>
            <Button
                android:id="@+id/H"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="H"/>
            <Button
                android:id="@+id/I"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="I"/>
            <Button
                android:id="@+id/J"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="J"/>
            <Button
                android:id="@+id/K"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="K"/>
            <Button
                android:id="@+id/L"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="L"/>
            <Button
                android:id="@+id/M"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="checkLetter"
                android:text="M"/>
            <Button
                android:id="@+id/N"
